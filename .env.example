# JWT Authentication Configuration
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production-12345
JWT_EXPIRY_HOURS=24

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/prompt2mesh_auth

# Anthropic API Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Rate Limit Handling Configuration
# These settings help prevent hitting Anthropic's rate limits
# Default values work well for 10,000 tokens/min limit

# Maximum number of retry attempts when rate limit is hit
RATE_LIMIT_MAX_RETRIES=5

# Base wait time in seconds for first retry (exponential backoff: 15s, 30s, 60s, 120s, 240s)
RATE_LIMIT_BASE_WAIT=15

# Delay in seconds between modeling steps to prevent rapid API calls
# Set to 0 to disable (but may hit rate limits faster)
RATE_LIMIT_STEP_DELAY=2.0

# LangGraph Configuration
# Maximum recursion limit for workflow execution
LANGGRAPH_RECURSION_LIMIT=100

# Refinement Configuration
# Number of refinement attempts per step (0 to disable refinement)
REFINEMENT_STEPS=2

# Note: Update these values for production use
# - Generate a strong JWT_SECRET_KEY using: python -c "import secrets; print(secrets.token_urlsafe(32))"
# - Update DATABASE_URL with your actual PostgreSQL credentials
# - Add your Anthropic API key
# - Adjust rate limit settings based on your organization's limits

